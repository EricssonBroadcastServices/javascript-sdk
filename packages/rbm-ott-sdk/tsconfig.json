{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "lib": ["ES2021", "dom", "dom.iterable", "ES2020.Promise"],
    "allowJs": true,
    "declaration": true,
    "declarationMap": true, // fixes "Go to Definition" in editors
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist/"
  },
  "include": ["generated"],
  "exclude": ["node_modules"],
}

