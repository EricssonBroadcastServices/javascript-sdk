{
  "name": "javascript-sdk",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "watch": "lerna run watch --parallel",
    "lerna:version": "lerna version --conventional-commits --no-changelog",
    "publish": "is-ci && lerna publish -y --no-verify-access from-package",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --parallel",
    "format": "lerna run format --parallel",
    "demo": "npm run demo -w @ericssonbroadcastservices/app-sdk-react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/humanize-duration": "^3.27.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^28.1.3",
    "lerna": "^7.3.1",
    "nock": "^13.1.3",
    "prettier": "^2.5.1",
    "rimraf": "^5.0.0",
    "ts-jest": "^28.0.8",
    "typescript": "^4.5.4"
  }
}
