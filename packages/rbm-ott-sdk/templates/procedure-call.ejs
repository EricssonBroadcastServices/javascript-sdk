export async function <%~ route.routeName.usage %> (<%~ wrapperArgs %>) {
    // @ts-ignore
    const ctx = (this[Symbol.for("_rbm_ctx_")] || this.context || this) as ServiceContext;
    return request<<%~ type %>>({
      method: "<%~ _.upperCase(method) %>",
      url: new URL(`<%~ path.replace("${customer}", "${ctx.customer}").replace("${businessUnit}", "${ctx.businessUnit}") %>`, ctx.baseUrl),
      headers: <%~ _.get(requestConfigParam, "name") %>,
      <% if (query) { %>query: <%~ queryName %>,<% } %>
      <% if (payload?.name) { %>body: <%~ payload.name %>,<% } %>
    })
}